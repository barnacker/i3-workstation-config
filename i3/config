set $inactive-text-color 	#444444
set $inactive-bg-color 		#111111
set $indicator 				#341100
set $urgent 				#900000
set $bg-bar 				#0F0711

# class                 border  	backgr. 	text    			 indicator
client.focused          $bg-color 	$bg-color 	$text-color 		 $indicator
client.focused_inactive $bg-color 	$bg-color 	$inactive-text-color $indicator
client.unfocused        $bg-color 	$bg-color 	$inactive-text-color $indicator
client.urgent           $urgent 	$urgent 	$bg-color 			 $urgent
client.placeholder      $bg-color 	$bg-color 	$inactive-text-color $indicator

client.background       #ffffff

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
        #tray_output primary
        colors {
			background $bg-color
	    	separator #757575
			#                  border           	background         text
			focused_workspace  $bg-color 			$bg-color          $text-color
			inactive_workspace $inactive-bg-color 	$inactive-bg-color $inactive-text-color
			urgent_workspace   $urgent 				$urgent   		   $text-color
	}
}

